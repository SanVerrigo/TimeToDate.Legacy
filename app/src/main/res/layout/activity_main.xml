<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_container_constraint_layout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.verrigo.timetodate.MainActivity">

    <android.support.v7.widget.RecyclerView android:id="@+id/time_to_date_recycler_view"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        tools:listitem="@layout/time_to_date_item"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_add_white_24dp"
        app:layout_constraintBottom_toBottomOf="@id/main_container_constraint_layout"
        app:layout_constraintEnd_toEndOf="@id/main_container_constraint_layout"
        />



</android.support.constraint.ConstraintLayout>
